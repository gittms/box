                <Registry Id="DefinitifVisualStudioGeneratorReg2x86" Action="write"  Root="HKLM"
                          Key="Software\Microsoft\VisualStudio\10.0\Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\.box" Type="string" Value="DefinitifBoxGenerator" />
                <!-- x86: Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\DefinitifBoxGenerator -->
                <Registry Id="DefinitifVisualStudioGeneratorReg3x86" Action="createKeyAndRemoveKeyOnUninstall" Root="HKLM"
                          Key="Software\Microsoft\VisualStudio\10.0\Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\DefinitifBoxGenerator" />
                <Registry Id="DefinitifVisualStudioGeneratorReg4x86" Action="write" Root="HKLM"
                          Key="Software\Microsoft\VisualStudio\10.0\Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\DefinitifBoxGenerator" Type="string" Value="Definitif Box Generator" />
                <Registry Id="DefinitifVisualStudioGeneratorReg5x86" Action="write" Root="HKLM"
                          Key="Software\Microsoft\VisualStudio\10.0\Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\DefinitifBoxGenerator" Name="CLSID" Type="string" Value="{CAE380BA-42D4-11DF-B540-4B2F56D89593}" />
