                <Registry Id="DefinitifVisualStudioGeneratorReg4x64" Action="write" Root="HKLM"
                          Key="Software\Wow6432Node\Microsoft\VisualStudio\10.0\Generators\{FAE04EC1-301F-11D3-BF4B-00C04F79EFBC}\DefinitifBoxGenerator" Type="string" Value="Definitif Box Generator" />
                <Registry Id="DefinitifVisualStudioGeneratorReg5x64" Action="write" Root="HKLM"
